<ul>
    <div id="articles">


        {% if    tag  == null %}
            {% for article in articles %}

                    <h2><a href="{{ path('show',{ 'id' : article.id }) }}"> Titre de l'article : {{ article.title }}</a></h2>
                    <p>Date de création : {{ article.createdAt|date('d-m-Y')  }}</p>
                    <p>Tag de l'article : <a href="{{ path('liste',{ 'tag' : article.tag }) }}">{{ article.tag }}</a></p>

            {% else %}
                <h2>Pas d'articles trouvé.</h2>
            {%  endfor %}
        {% else %}
            <p>Le tag c'est: {{ tag }} </p>
    {% for article in articles %}
{% if  article.tag  ==  tag   %}
        <h2><a href="{{ path('show',{ 'id' : article.id }) }}"> Titre de l'article : {{ article.title }}</a></h2>
        <p>Date de création : {{ article.createdAt|date('d-m-Y')  }}</p>
        <p>Tag de l'article : <a href="{{ path('liste',{ 'tag' : article.tag }) }}">{{ article.tag }}</a></p>

        {% endif %}
    {% else %}
        <h2>Pas d'articles trouvé.</h2>
    {%  endfor %}
        {% endif %}
        </div>
