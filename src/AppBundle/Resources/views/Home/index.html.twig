<link rel="stylesheet" href="{{ asset('bundles/app/css/bootstrap.min.css') }}">
<link rel="stylesheet" href="{{ asset('bundles/app/css/home.css') }}">
{% embed "::base.html.twig" %}
    {% block body %}
    {% endblock %}
{% endembed %}

<div class="container">

    <h1>Bienvenue sur la page d'accueil</h1>

    <div id="articles">


            {% for article in articles %}

                <h2><a href="{{ path('show',{ 'id' : article.id }) }}"> Titre de l'article : {{ article.title }}</a></h2>
                <p>Date de création : {{ article.createdAt|date('d-m-Y')  }}</p>
                <p>Tag  : <a href="{{ path('liste',{ 'tag' : article.tag }) }}">{{ article.tag }}</a></p>


            {% else %}
                <h2>Pas d'articles trouvé.</h2>
            {%  endfor %}
    </div>

</div>